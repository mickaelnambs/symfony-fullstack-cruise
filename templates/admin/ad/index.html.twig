{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces!{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="p-3 text-center">
			<h1>Gestion des annonces
				<span>
					<a href="{{ path('admin_ad_new') }}" class="btn btn-success">
						<i class="fa fa-plus"> Ajouter</i>
					</a>
				</span>
			</h1>
		</div>

		<table class="table table-hover table-bordered">
			<thead>
				<tr class="text-center">
					<th>Id</th>
					<th>Titre</th>
					<th>Places</th>
					<th>Auteur</th>
					<th>RÃ©servations</th>
					<th>Actions</th>
				</tr>
			</thead>

			<tbody>
				{% for ad in ads %}
					<tr class="text-center">
						<td>{{ad.id}}</td>
						<td>{{ad.name}}</td>
						<td>
							<span class="badge badge-success rounded">{{ad.place}}</span>
						</td>
						<td>{{ad.user.fullName}}</td>
						<td>
							<span class="badge badge-primary rounded">{{ad.bookings | length}}</span>
						</td>
						<td>
							<a href="{{ path('admin_ad_edit', {'id': ad.id}) }}" class="btn btn-primary">
								<i class="fa fa-edit"></i>
							</a>
							<a href="{{ path('admin_ad_delete', {'id': ad.id}) }}" data-delete class="btn btn-danger">
								<i class="fa fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		{# {{ pagination.display() }} #}
	</div>
{% endblock %}